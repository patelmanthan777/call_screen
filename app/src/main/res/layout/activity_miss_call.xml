<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="MissCallActivity"
            type="com.mgosu.callscreen.ui.activity.MissCallActivity" />
    </data>

    <RelativeLayout
        android:id="@+id/RlLayout"
        android:padding="@dimen/_10sdp"
        android:background="@color/md_black_1000_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_180sdp">
            <LinearLayout
                android:clickable="true"
                android:paddingBottom="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/bg_dialog_misscall"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:fontFamily="@font/opensans_semibold"
                            android:textSize="@dimen/_11sdp"
                            android:text="Call Flash"
                            android:textColor="@color/color_thumswicht"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvNumber"
                            android:includeFontPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="023-456-789"
                            android:textColor="@color/color_thumswicht"
                            android:textSize="@dimen/_25sdp" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_misscall"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp" />
                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/color_thumswicht"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>



                    </LinearLayout>

                    <ImageView
                        android:src="@drawable/ic_image_misscall"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:paddingEnd="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linear_call"
                        android:gravity="center"
                        android:background="@drawable/bg_bt_call"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp" >
                        <ImageView
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_phone"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp" />
                        <TextView
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/color_white"
                            android:text="@string/call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/linear_mess"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:gravity="center"
                            android:background="@drawable/bg_bt_message"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_mess"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp" />
                            <TextView
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/color_white"
                                android:text="Message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_marked"
                            android:gravity="center"
                            android:background="@drawable/bg_bt_marked"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_mess"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp" />
                            <TextView
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/color_white"
                                android:text="@string/marke_as_spam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp" />

        </RelativeLayout>


    </RelativeLayout>

</layout>