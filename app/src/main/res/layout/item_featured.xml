<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemvideo"
            type="com.mgosu.callscreen.ui.adapter.CallFlashAdapter" />
    </data>

    <RelativeLayout
        android:id="@+id/LayoutItemImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp">

        <android.support.v7.widget.CardView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_155sdp"
                    android:layout_height="@dimen/_200sdp" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/ic_gift"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="1dp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:id="@+id/crCallEnd"
                    android:layout_marginTop="@dimen/_140sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/bt_callend"
                    app:civ_border_color="@color/color_white"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:id="@+id/crCallAns"
                    android:layout_marginTop="@dimen/_140sdp"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/bt_start"
                    app:civ_border_color="@color/color_white"
                    />
                <RelativeLayout
                    android:id="@+id/RlGroupDownLoad"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_170sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/bg_call_item"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp" />
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_count_down"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp" />
                        <TextView
                            android:id="@+id/tvDowload"
                            android:text="12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RlGroupHeart"
                    android:layout_marginStart="@dimen/_105sdp"
                    android:layout_marginTop="@dimen/_170sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/bg_call_item"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp" />
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_heart"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp" />
                        <TextView
                            android:id="@+id/tvHeart"
                            android:text="12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</layout><!--android:adjustViewBounds="true"-->
